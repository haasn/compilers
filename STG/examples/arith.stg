zero = <0> ;
succ = \n -> <1> n ;

add = \x y ->
  case x of {
    <0>   -> y

    <1> n -> succ (add n y)
  };

mul = \x y ->
  case x of {
    <0>   -> x

    <1> n -> add y (mul n y)
  };

eq = \x y ->
  case x of {
    <0>   -> case y of {
      <0>   -> true
      <1> m -> false }

    <1> n -> case y of {
      <0>   -> false
      <1> m -> eq n m }
  };

toInt = \x ->
  case x of {
    <0>   -> #0
    <1> n -> + #1 (toInt n)
  };

one   = succ zero ;
two   = succ one  ;
three = succ two
