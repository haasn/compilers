nil  = \     -> <0> ;
cons = \x xs -> <1> x xs ;

map = \f l ->
  case l of {
    <0> -> l

    <1> x xs -> let fx  = @ f x      ;
                    mfx = @ map f xs
		in <1> fx mfx
  };

sum = \l ->
  case l of {
    <0> -> #0

    <1> x xs ->
      let sxs = \ -> sum xs
      in + x sxs
  };

onetwothree = @ let
  x3 = @ cons #3 nil ;
  x2 = @ cons #2 nil
  in cons #1 x2
